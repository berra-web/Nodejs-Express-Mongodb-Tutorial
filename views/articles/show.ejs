<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../_extendables/head_links') %>
</head>

<body>
  <%- include('../_extendables/nav') %>
  <% if (article) { %>
  <!--Page Header masthead -->
  <header class="masthead" style="background-image: url('./../../public/img/px.jpg');" >
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= article.title %></h1>
            <h2 class="subheading">Author :<%= article.description %></h2>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Post Content -->
  <article> 
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%- article.sanitizedHtml %></p>
          <h5><label for="Tags">Tag :</label><%= article.status %></h5>
          <h2 class="subheading">Author :<%= article.description %></h2>
          <span class="meta">About
            <a href="/about"><span style="color:#007bec">Author</span></a>
            on  <%= article.published.toLocaleDateString() %></span>
        </div>
      </div>
    </div>
  </article> 
  <hr>
  <div style="display: flex;justify-content: center;">
    <a href="/" class="btn btn-secondary">All Articles</a>
    <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
  </div>
  <% } %>
  <%- include('../_extendables/footer-scripts') %>
</body>
</html>
